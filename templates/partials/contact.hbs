<div class="container-fluid mt-5 about-style" id="contactid">
      <div class="row">
        
            <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading mb-5">We will be happy to help you</p>
          <div class="row"> 
            <div class="col-md-8 col-12 mx-auto">
<form action="/contact" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Full Name">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Message</label>
    <input type="text" class="form-control" id="message" aria-describedby="emailHelp" placeholder="Message" name="message">
  </div>
  <button type="submit" class="btn-style btn-primary mt-5">Submit</button>
</form>
            </div>
          </div>
        </div>
      </div>
    </div>



